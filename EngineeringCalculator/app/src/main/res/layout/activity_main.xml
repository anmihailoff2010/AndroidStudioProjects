<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/memoryBuffer"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:textSize="20pt" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="20pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buMS"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickMemoryBuffer"
                android:text="MS"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMR"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickMemoryBuffer"
                android:text="MR"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMC"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickMemoryBuffer"
                android:text="MC"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMPlus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickMemoryBuffer"
                android:text="M+"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMMinus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickMemoryBuffer"
                android:text="M-"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buC"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickC"
                android:text="C"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMultiplication"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickOperation"
                android:text="✕"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buDel"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickOperation"
                android:text="÷"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buPlus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickOperation"
                android:text="+"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickOperation"
                android:text="-"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buSquaring"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickExponentiation"
                android:text="x²"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buCubing"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickExponentiation"
                android:text="x³"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buDecimalPoint"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text=","
                android:textSize="25sp" />

            <Button
                android:id="@+id/bu0"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickNumber"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buXy"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickEqual"
                android:text="xⁿ"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buEqual"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="onClickEqual"
                android:text="="
                android:textSize="25sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>